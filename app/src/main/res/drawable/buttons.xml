<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <corners android:radius="50dp" /> <!-- Radius for rounded corners -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" /> <!-- Radius for rounded corners -->
            <gradient
                android:startColor="@color/teal_200" android:endColor="@color/teal_200" android:angle="45"/>
            <!-- Angle for the gradient -->
        </shape>
    </item>
</layer-list>
