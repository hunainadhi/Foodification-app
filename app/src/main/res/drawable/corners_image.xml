<?xml version="1.0" encoding="utf-8"?>
    <!-- res/drawable/gradient_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Background -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="@android:color/transparent" />
    </shape>
</item>

<!-- Gradient Border -->
<item android:left="0sp" android:right="0sp" android:top="0sp" android:bottom="0sp">
    <shape android:shape="rectangle">
        <corners android:radius="0dp" /> <!-- Radius for rounded corners -->
        <stroke
            android:width="10dp" android:color="#8BCF7B"  android:angle="45" /> <!-- Angle for the gradient -->
 /> <!-- Angle for the gradient -->
    </shape>
</item>
</layer-list>



